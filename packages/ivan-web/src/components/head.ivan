inject GlobalStyle: style
  html *
    box-sizing: border-box;

  body
    margin: 0;
    position: relative
    min-height: 100vh

  html
    font-size: 62.5%

export layout Head: head
  title: Ivan: A minimalist markup language for the web
  meta charset="utf-8"
  link href="https://fonts.googleapis.com/css?family=Arimo|Roboto+Mono" rel="stylesheet"
  GlobalStyle
